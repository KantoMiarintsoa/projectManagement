<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Tableau des tâches</title>
  <link rel="stylesheet" href="css/task.css">
  <style>

.container {
  text-align: center;
}

h1 {
  margin-bottom: 20px;
}

.btn {
  background-color: #343a40;
  color: white;
  border: none;
  padding: 10px 20px;
  border-radius: 5px;
  cursor: pointer;
  font-size: 16px;
}

.btn:hover {
  background-color: #0056b3;
}

.modal {
  display: none;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  justify-content: center;
  align-items: center;
}

.modal-content {
  background-color: white;
  padding: 20px;
  border-radius: 10px;
  width: 90%;
  max-width: 500px;
  position: relative;
}

.modal-content h2 {
  margin-top: 0;
}

.modal-content label {
  display: block;
  margin-top: 10px;
  font-weight: bold;
}

.modal-content input,
.modal-content textarea {
  width: 100%;
  padding: 10px;
  margin-top: 5px;
  border: 1px solid #ccc;
  border-radius: 5px;
}

.close-btn {
  position: absolute;
  top: 10px;
  right: 15px;
  font-size: 1.5rem;
  cursor: pointer;
}

.close-btn:hover {
  color: red;
}

    /* Styles pour le modal */
.modal {
  display: none; /* Masqué par défaut */
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.6); /* Fond semi-transparent */
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.modal-content {
  background-color: #ffffff;
  border-radius: 8px;
  padding: 20px;
  width: 400px;
  max-width: 90%;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
  position: relative;
  animation: fadeIn 0.3s ease-out;
}

.modal-content h2 {
  font-size: 1.5rem;
  margin-bottom: 10px;
  color: #333;
}

.modal-content span,
.modal-content label {
  display: block;
  margin: 10px 0 5px;
  font-weight: bold;
  color: #555;
}

.modal-content p {
  color: #666;
  margin-bottom: 15px;
}

.modal-content select,
.modal-content textarea {
  width: calc(100% - 10px);
  padding: 8px;
  margin-bottom: 15px;
  border: 1px solid #ddd;
  border-radius: 4px;
  font-size: 14px;
  resize: vertical;
}

.modal-content ul {
  list-style: none;
  padding: 0;
  margin: 0 0 15px 0;
}

.modal-content ul li {
  background: #f9f9f9;
  margin: 5px 0;
  padding: 8px;
  border-radius: 4px;
  color: #333;
  font-size: 14px;
}

.modal-content .close {
  position: absolute;
  top: 10px;
  right: 15px;
  font-size: 1.2rem;
  cursor: pointer;
  color: #aaa;
  transition: color 0.3s;
}

.modal-content .close:hover {
  color: #333;
}

#saveTaskButton {
  background-color: #343a40 ;
  color: #fff;
  padding: 10px 15px;
  border: none;
  border-radius: 4px;
  font-size: 14px;
  cursor: pointer;
  transition: background-color 0.3s ease;
}

#saveTaskButton:hover {
  background-color: #0056b3;
}

/* Animation d'apparition */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(-10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

  </style>
</head>
<body>
    <%- include('sidebar') %>

  <div class="trello-container">
    <header>
      <h1>Tâches</h1>
      <button id="openModalBtn" class="btn">+ Ajouter un Ticket</button>
    </header>
    <div class="columns">
      <div class="column">
        <h2>À faire</h2>
        <% tasks.forEach(task => { %>
          <div class="ticket" data-title="<%= task.title %>" data-description="<%= task.description %>">
            <div class="ticket-header">
              <h3><%= task.title %></h3>
              <div class="options">
                <span class="three-dots">⋮</span>
                <div class="actions">
                  <button class="edit-btn" 
                      data-id="<%= task._id %>" 
                      data-title="<%= task.title %>" 
                      data-description="<%= task.description %>" 
                      data-status="<%= task.status %>">
                      Modifier
                  </button>
                  <a href="task/delete/<%= task._id %>" class="delete-btn" onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce projet ?')">Supprimer</a>
                </div>
              </div>
            </div>
          </div>
        <% }); %>
      </div>
      <div class="column">
        <h2>À faire</h2>
        <% if (tasks && tasks.length > 0) { %>
          <% tasks.forEach(task => { %>
            <div class="ticket" data-title="<%= task.title %>" data-description="<%= task.description %>">
              <div class="ticket-header">
                <h3><%= task.title %></h3>
                <div class="options">
                  <span class="three-dots">⋮</span>
                  <div class="actions">
                    <button class="edit-btn" 
                        data-id="<%= task._id %>" 
                        data-title="<%= task.title %>" 
                        data-description="<%= task.description %>" 
                        data-status="<%= task.status %>">
                        Modifier
                    </button>
                    <a href="task/delete/<%= task._id %>" class="delete-btn" onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce projet ?')">Supprimer</a>
                  </div>
                </div>
              </div>
            </div>
          <% }); %>
        <% } else { %>
          <p>Aucune tâche trouvée.</p>
        <% } %>
      </div>
            
    </div>
  </div>

  <!-- Modal -->
    <div id="taskModal" class="modal">
        <div class="modal-content">
        <span class="close">&times;</span>
        <h2 id="modalTitle">Titre de la Tâche</h2>
        <span>Description</span>
        <p id="modalDescription">Description de la tâche ici.</p>
        <label for="taskStatus">Statut</label>
        <select id="taskStatus">
            <option value="À Faire">À Faire</option>
            <option value="En Cours">En Cours</option>
            <option value="Terminé">Terminé</option>
        </select>
    
        <label>Membres assignés</label>
        <ul id="taskMembers">
            <li>Aucun membre assigné.</li>
        </ul>
    
        <label for="taskComment">Commentaire</label>
        <textarea id="taskComment" placeholder="Ajouter un commentaire..."></textarea>
    
        <button id="saveTaskButton">Enregistrer</button>
        </div>
    </div>

    <div id="addTaskModal" class="modal">
      <div class="modal-content">
        <span class="close-btn">&times;</span>
        <h2>Ajouter une Nouvelle Tâche</h2>
        <form id="taskForm" action="/task/create" method="POST">
          <label for="taskTitle">Titre de la tâche</label>
          <input type="text" id="taskTitle" placeholder="Entrez le titre de la tâche">
  
          <label for="taskDescription">Description</label>
          <textarea id="taskDescription" placeholder="Entrez la description"></textarea>

          <label for="newTaskStatus">Statut</label>
                        <select id="newTaskStatus">
                            <option value="À Faire">À Faire</option>
                            <option value="En Cours">En Cours</option>
                            <option value="Terminé">Terminé</option>
                        </select>
  
          <button type="submit" class="btn">Ajouter</button>
        </form>
      </div>
    </div>

      <script>
        // Sélection des éléments
          const openModalBtn = document.getElementById('openModalBtn');
          const addTaskModal = document.getElementById('addTaskModal');
          const closeModalBtn = document.querySelector('.close-btn');

          // Ouvrir le modal
          openModalBtn.addEventListener('click', () => {
            addTaskModal.style.display = 'flex';
          });

          // Fermer le modal
          closeModalBtn.addEventListener('click', () => {
            addTaskModal.style.display = 'none';
          });

          // Fermer le modal en cliquant en dehors du contenu
          window.addEventListener('click', (event) => {
            if (event.target === addTaskModal) {
              addTaskModal.style.display = 'none';
            }
          });

      </script>

    <script src="js/task.js"></script>
    </body>
    </html>