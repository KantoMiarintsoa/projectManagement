                    <input type="password" id="confirm-password" name="confirm-password" placeholder="Confirmer votre mot de passe" required>
                </div>
                <div class="input-group">
                    <input type="tel" id="contact" name="contact" placeholder="Contact" required>
                </div>
                <div class="radio-group">
                    <label>
                        <input type="radio" name="sexe" value="male" required> Homme
                    </label>
                    <label>
                        <input type="radio" name="sexe" value="female"> Femme
                    </label>
                </div>
                <button type="submit" class="form-btn">S'inscrire</button>
            </form>
        </div>
    </div>

